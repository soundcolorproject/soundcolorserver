
#shortcuts {
  display: flex;
  flex-direction: row;
  opacity: 1;
  transition: opacity 0.3s;

  &.hidden {
    opacity: 0;
  }

  .icon-button {
    padding: 28px;
    line-height: 1px;
    --icon-color: var(--white);
    background: transparent;
    border: none;
    flex: 1;
    margin: 0;

    &:hover {
      opacity: 0.5;
    }

    &:active {
      opacity: 0.3;
    }
  }
}
