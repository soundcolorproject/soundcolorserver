
.share-link {
  background: transparent;
  color: var(--white);
  text-decoration: underline;
  padding: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  font-size: 12px;
  line-height: 20px;
  opacity: 1;
  transition: opacity 0.3s;
  font-weight: bold;
  text-shadow: 0 0 2px var(--black), 0 0 2px var(--black),  0 0 4px var(--black);

  &.hidden {
    opacity: 0;
    pointer-events: none;
    cursor: default;
  }
}
