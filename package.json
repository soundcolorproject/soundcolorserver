{
  "name": "soundcolorserver",
  "version": "0.0.1",
  "description": "The server for using sound to drive color changing lights",
  "main": "electron/dev.js",
  "private": true,
  "scripts": {
    "preversion": "npm run check",
    "postversion": "run-s version:*",
    "version:app": "cd electron && npm version from-git",
    "version:build": "npm run build",
    "version:apps": "npm run pack && npm run dist",
    "start": "node dist/server/index.js",
    "start:local": "DEV=true node dist/server/index.js",
    "dev-remote": "USE_REMOTE_API=true npm run dev",
    "dev-sudo": "sudo --preserve-env=PATH npm run dev-sudo:run",
    "dev-sudo:run": "LOCAL_SSL=true URL='https://soundcolor.local/' npm run dev",
    "dev": "run-p dev:watch dev:open",
    "electron": "electron --inspect=32123 .",
    "dev:watch": "node --inspect=32123 server/dev.js",
    "dev:open": "npm run dev:open:wait; open-cli \"${URL:-http://localhost:${PORT:-9000}/}\"",
    "dev:open:wait": "bash -c 'while ! curl -k \"${URL:-http://localhost:${PORT:-9000}/}\" --fail &>/dev/null; do sleep 1; done'",
    "prebuild": "rm -rf dist apps",
    "watch:css-types": "nodemon --config nodemon.css-types.json",
    "build": "run-s build:*",
    "build:server": "tsc -p ./tsconfig.server.json",
    "build:css-types": "webpack-cli --config ./config/webpack/onlyStyleTypes.ts",
    "build:site": "NODE_ENV='production' webpack-cli --config ./config/webpack/index.ts --env.prod",
    "build:storybook": "BUILD=true build-storybook && mv storybook-static dist/public/storybook",
    "build:static": "cp -r static dist",
    "build:electron-static": "cp -r electron/static dist/electron && cp -r electron/resources dist && cp electron/package.json dist && cp package-lock.json dist",
    "build:cleanup": "rm -rf dist/config",
    "pack": "cd dist && electron-builder --dir",
    "dist": "cd dist && electron-builder",
    "lint": "run-s lint:*",
    "lint:ts": "tslint --project .",
    "lint:glsl": "node ./lint-glsl.js",
    "test": "jest --passWithNoTests",
    "verify-build": "bash ./verify-build.sh true",
    "verify-build-ci": "bash ./verify-build.sh",
    "check": "run-s lint build test verify-build",
    "check-simple": "run-s lint build test",
    "check-ci": "run-s lint build test verify-build-ci",
    "storybook": "start-storybook -p 6006 -s ./static",
    "cy": "start-server-and-test dev:watch :${PORT:-9000} cy:open",
    "cy:ci": "start-server-and-test dev:watch :${PORT:-9000} cy:run",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "build-generators": "run-p build-generators:*",
    "build-generators:site": "cd generators/site && jake build",
    "build-generators:server": "cd generators/server && jake build -s",
    "generate:component": "npm run build-generators && yo site:component",
    "generate:container": "npm run build-generators && yo site:container",
    "generate:route": "npm run build-generators && yo server:route"
  },
  "license": "ISC",
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "mongodb": "^3.5.5",
    "node-cache": "^5.1.0",
    "node-hue-api": "^4.0.5",
    "nodemailer": "^6.4.6",
    "start-server-and-test": "^1.11.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@hot-loader/react-dom": "^16.13.0",
    "@reach/router": "^1.3.3",
    "@simonwep/pickr": "^1.5.1",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-storyshots": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.4",
    "@types/classnames": "^2.2.10",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/express": "^4.17.4",
    "@types/glob": "^7.1.1",
