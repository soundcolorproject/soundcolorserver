    "@types/reach__router": "^1.3.4",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/webpack": "^4.41.10",
    "@types/webpack-dev-middleware": "^3.7.0",
    "@types/webpack-hot-middleware": "^2.25.0",
    "@types/workbox-sw": "^4.3.1",
    "@types/workbox-webpack-plugin": "^5.1.1",
    "@types/yargs": "^15.0.5",
    "@types/yeoman-generator": "^3.1.4",
    "autoprefixer": "^9.7.5",
    "babel-jest": "^25.2.6",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "css-vars-ponyfill": "^2.2.1",
    "cypress": "4.10.0",
    "cypress-cucumber-preprocessor": "git+https://github.com/TheBrainFamily/cypress-cucumber-preprocessor.git",
    "disable-output-webpack-plugin": "^1.0.1",
    "dotenv": "^8.2.0",
    "electron": "9.0.4",
    "electron-builder": "^22.7.0",
    "enzyme-to-json": "^3.4.4",
    "express-http-proxy": "^1.6.0",
    "file-loader": "^6.0.0",
    "generator-server": "file:generators/server",
    "generator-site": "file:generators/site",
    "glob": "^7.1.6",
